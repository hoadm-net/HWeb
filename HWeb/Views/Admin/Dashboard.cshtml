@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-success">
            <h4><i class="fas fa-check-circle"></i> Chào mừng Admin!</h4>
            <p>@ViewBag.Message</p>
            <p>Bạn đã đăng nhập thành công vào hệ thống quản trị.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Thông tin Admin</h5>
            </div>
            <div class="card-body">
                <p><strong>Tên đăng nhập:</strong> @User.Identity!.Name</p>
                <p><strong>Thời gian đăng nhập:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Vai trò:</strong> Admin</p>
                
                <hr />
                
                <div class="mt-3">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                        </button>
                    </form>
                    
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fas fa-home"></i> Về trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .fas {
        margin-right: 5px;
    }
</style>
