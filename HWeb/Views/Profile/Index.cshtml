@model HWeb.Models.ProfileViewModel

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user"></i> @ViewData["Title"]
                    </h3>
                    <div>
                        @if (User.IsInRole("Admin"))
                        {
                            <span class="badge bg-danger">Admin</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">Khách hàng</span>
                        }
                    </div>
                </div>
                
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Avatar Section -->
                    <div class="text-center mb-4">
                        <div class="avatar-wrapper d-inline-block position-relative">
                            <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                                 style="width: 120px; height: 120px; font-size: 48px; color: white;">
                                @if (!string.IsNullOrEmpty(Model.FirstName))
                                {
                                    @Model.FirstName.Substring(0, 1).ToUpper()
                                }
                                else
                                {
                                    <i class="fas fa-user"></i>
                                }
                            </div>
                        </div>
                        <h4 class="mt-3">
                            @if (!string.IsNullOrEmpty(Model.FullName))
                            {
                                @Model.FullName
                            }
                            else
                            {
                                @Model.Email
                            }
                        </h4>
                        <p class="text-muted">Thành viên từ @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                    </div>

                    <!-- Profile Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-primary">
                                        <i class="fas fa-envelope"></i> Email
                                    </h6>
                                    <p class="card-text">@Model.Email</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-primary">
                                        <i class="fas fa-phone"></i> Số điện thoại
                                    </h6>
                                    <p class="card-text">
                                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                        {
                                            @Model.PhoneNumber
                                        }
                                        else
                                        {
                                            <em class="text-muted">Chưa cập nhật</em>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-primary">
                                        <i class="fas fa-user"></i> Tên
                                    </h6>
                                    <p class="card-text">
                                        @if (!string.IsNullOrEmpty(Model.FirstName))
                                        {
                                            @Model.FirstName
                                        }
                                        else
                                        {
                                            <em class="text-muted">Chưa cập nhật</em>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-primary">
                                        <i class="fas fa-user-tag"></i> Họ
                                    </h6>
                                    <p class="card-text">
                                        @if (!string.IsNullOrEmpty(Model.LastName))
                                        {
                                            @Model.LastName
                                        }
                                        else
                                        {
                                            <em class="text-muted">Chưa cập nhật</em>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Account Stats -->
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="card border-info mb-3">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0"><i class="fas fa-crown"></i> Quyền quản trị</h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-0">Bạn có quyền truy cập tất cả các chức năng quản trị của hệ thống.</p>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="card-footer">
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-action="Edit" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Chỉnh sửa thông tin
                        </a>
                        <a asp-action="ChangePassword" class="btn btn-warning">
                            <i class="fas fa-key"></i> Đổi mật khẩu
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-info">
                                <i class="fas fa-tachometer-alt"></i> Về Dashboard
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
