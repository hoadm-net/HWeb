@model HWeb.Models.Tag

@{
    ViewData["Title"] = "Xóa tag";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]
                    </h3>
                </div>
                
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa tag này không? Hành động này không thể hoàn tác!
                    </div>
                    
                    @if (Model.ProductTags.Any())
                    {
                        <div class="alert alert-danger">
                            <strong>Không thể xóa:</strong> Tag này đang được sử dụng bởi <strong>@Model.ProductTags.Count sản phẩm</strong>. 
                            Bạn cần gỡ tag này khỏi tất cả sản phẩm trước khi xóa.
                        </div>
                    }
                    
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Tên Tag:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span class="badge bg-primary fs-5">
                                <i class="fas fa-tag"></i> @Html.DisplayFor(model => model.Name)
                            </span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Số sản phẩm sử dụng:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span class="badge bg-info fs-6">@Model.ProductTags.Count sản phẩm</span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Trạng thái:</strong>
                        </div>
                        <div class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không hoạt động</span>
                            }
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Ngày tạo:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                    
                    @if (Model.ProductTags.Any())
                    {
                        <hr />
                        <h6>Sản phẩm đang sử dụng tag này:</h6>
                        <ul class="list-group list-group-flush">
                            @foreach (var productTag in Model.ProductTags.Take(5))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @productTag.Product.Name
                                    <span class="badge bg-secondary">@productTag.Product.Category.Name</span>
                                </li>
                            }
                            @if (Model.ProductTags.Count > 5)
                            {
                                <li class="list-group-item text-center text-muted">
                                    ... và @(Model.ProductTags.Count - 5) sản phẩm khác
                                </li>
                            }
                        </ul>
                    }
                </div>
                
                <div class="card-footer">
                    @if (!Model.ProductTags.Any())
                    {
                        <form asp-action="Delete" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa tag này?')">
                                <i class="fas fa-trash"></i> Xác nhận xóa
                            </button>
                        </form>
                    }
                    else
                    {
                        <button type="button" class="btn btn-danger" disabled>
                            <i class="fas fa-ban"></i> Không thể xóa
                        </button>
                    }
                    
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-eye"></i> Chi tiết
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
