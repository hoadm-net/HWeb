@model HWeb.Models.Tag

@{
    ViewData["Title"] = "Chi tiết tag";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">@ViewData["Title"]</h3>
                    <div>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Không hoạt động</span>
                        }
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Tên Tag:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span class="badge bg-primary fs-5">
                                <i class="fas fa-tag"></i> @Html.DisplayFor(model => model.Name)
                            </span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Số sản phẩm sử dụng:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span class="badge bg-info fs-6">@Model.ProductTags.Count sản phẩm</span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Ngày tạo:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                    
                    @if (Model.ProductTags.Any())
                    {
                        <hr />
                        <h5>Sản phẩm sử dụng tag này:</h5>
                        <div class="table-responsive">
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th>Tên sản phẩm</th>
                                        <th>Danh mục</th>
                                        <th>Giá</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var productTag in Model.ProductTags)
                                    {
                                        <tr>
                                            <td>@productTag.Product.Name</td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    @productTag.Product.Category.Name
                                                </span>
                                            </td>
                                            <td>@productTag.Product.Price.ToString("N0") đ</td>
                                            <td>
                                                @if (productTag.Product.IsActive)
                                                {
                                                    <span class="badge bg-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Tạm dừng</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Tag này chưa được sử dụng bởi sản phẩm nào.
                        </div>
                    }
                </div>
                
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Chỉnh sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                    @if (!Model.ProductTags.Any())
                    {
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa tag
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
