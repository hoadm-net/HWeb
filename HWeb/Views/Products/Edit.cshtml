@model HWeb.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 col-md-12 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">@ViewData["Title"]</h3>
                </div>
                
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedAt" type="hidden" />
                        <input asp-for="ImageUrl" type="hidden" />
                        
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Tên sản phẩm *</label>
                                    <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="ShortDescription" class="form-label">Mô tả ngắn</label>
                                    <textarea asp-for="ShortDescription" class="form-control" rows="3" placeholder="Mô tả ngắn gọn về sản phẩm"></textarea>
                                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="DetailDescription" class="form-label">Mô tả chi tiết</label>
                                    <textarea asp-for="DetailDescription" class="form-control" rows="6" placeholder="Mô tả chi tiết về sản phẩm"></textarea>
                                    <span asp-validation-for="DetailDescription" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <!-- Right Column -->
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Danh mục *</label>
                                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                                        <option value="">-- Chọn danh mục --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Hình ảnh sản phẩm</label>
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <div class="mb-2">
                                            <img src="@Model.ImageUrl" alt="Current image" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
                                            <br><small class="text-muted">Hình ảnh hiện tại</small>
                                        </div>
                                    }
                                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                                    <small class="form-text text-muted">Để trống nếu không muốn thay đổi hình ảnh</small>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Tags</label>
                                    <div class="border rounded p-2" style="max-height: 200px; overflow-y: auto;">
@{
    var selectedTags = ViewBag.SelectedTags as int[] ?? Array.Empty<int>();
    var tagsList = ViewBag.Tags as List<SelectListItem>;
}
@if (tagsList != null && tagsList.Count > 0)
{
    foreach (var tag in tagsList)
    {
        bool isChecked = int.TryParse(tag.Value, out var tid) && selectedTags.Contains(tid);
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="selectedTags" value="@tag.Value" id="tag_@tag.Value" @(isChecked ? "checked" : null) />
            <label class="form-check-label" for="tag_@tag.Value">@tag.Text</label>
        </div>
    }
}
else
{
    <small class="text-muted">Chưa có tag nào. <a asp-controller="Tags" asp-action="Create">Tạo tag mới</a></small>
}
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Price and Stock Row -->
                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">Giá gốc *</label>
                                    <div class="input-group">
                                        <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" />
                                        <span class="input-group-text">đ</span>
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="SalePrice" class="form-label">Giá khuyến mãi</label>
                                    <div class="input-group">
                                        <input asp-for="SalePrice" type="number" step="0.01" min="0" class="form-control" />
                                        <span class="input-group-text">đ</span>
                                    </div>
                                    <span asp-validation-for="SalePrice" class="text-danger"></span>
                                    <div class="discount-info"></div>
                                </div>
                            </div>
                            
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Stock" class="form-label">Số lượng tồn kho</label>
                                    <input asp-for="Stock" type="number" min="0" class="form-control" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <div class="form-check mt-2">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Kích hoạt sản phẩm
                                        </label>
                                    </div>
                                    <small class="form-text text-muted">Sản phẩm sẽ hiển thị trên website khi được kích hoạt</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Timestamps -->
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">Ngày tạo: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <div class="col-md-6">
                                    <small class="text-muted">Cập nhật lần cuối: @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Cập nhật sản phẩm
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> Chi tiết
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Preview new image
        document.querySelector('input[name="imageFile"]').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    // Create or update preview
                    let preview = document.querySelector('.new-image-preview');
                    if (!preview) {
                        preview = document.createElement('img');
                        preview.className = 'new-image-preview img-thumbnail mt-2';
                        preview.style.maxWidth = '200px';
                        preview.style.maxHeight = '200px';
                        document.querySelector('input[name="imageFile"]').parentNode.appendChild(preview);
                    }
                    preview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // Auto-calculate sale percentage
        function updateDiscount() {
            const price = parseFloat(document.querySelector('input[name="Price"]').value) || 0;
            const salePrice = parseFloat(document.querySelector('input[name="SalePrice"]').value) || 0;
            const discountInfo = document.querySelector('.discount-info');
            
            if (price > 0 && salePrice > 0 && salePrice < price) {
                const discount = Math.round(((price - salePrice) / price) * 100);
                discountInfo.innerHTML = `<small class="text-success">Giảm ${discount}%</small>`;
            } else {
                discountInfo.innerHTML = '';
            }
        }

        document.querySelector('input[name="SalePrice"]').addEventListener('input', updateDiscount);
        document.querySelector('input[name="Price"]').addEventListener('input', updateDiscount);
        
        // Calculate discount on page load
        updateDiscount();
    </script>
}
