@model IEnumerable<HWeb.Models.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">@ViewData["Title"]</h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm sản phẩm mới
                    </a>
                </div>
                
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Search and Filter Form -->
                    <div class="card bg-light mb-3">
                        <div class="card-body">
                            <form method="get" class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Tìm kiếm sản phẩm</label>
                                    <input type="text" name="search" value="@ViewBag.CurrentSearch" class="form-control" placeholder="Nhập tên hoặc mô tả sản phẩm...">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Danh mục</label>
                                    <select name="categoryId" asp-items="ViewBag.Categories" class="form-select">
                                        <option value="">-- Tất cả danh mục --</option>
                                    </select>
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="submit" class="btn btn-outline-primary me-2">
                                        <i class="fas fa-search"></i> Tìm kiếm
                                    </button>
                                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                        <i class="fas fa-times"></i> Xóa bộ lọc
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (Model.Any())
                    {
                        <!-- Summary Info -->
                        <div class="mb-3">
                            <small class="text-muted">
                                Hiển thị @Model.Count() sản phẩm trên tổng số @ViewBag.TotalItems sản phẩm
                                @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch))
                                {
                                    <span>với từ khóa "<strong>@ViewBag.CurrentSearch</strong>"</span>
                                }
                            </small>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th width="80">Hình ảnh</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Danh mục</th>
                                        <th>Giá</th>
                                        <th>Tồn kho</th>
                                        <th>Tags</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tạo</th>
                                        <th width="140">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                                @if (!string.IsNullOrEmpty(item.ShortDescription))
                                                {
                                                    <br>
                                                    <small class="text-muted">
                                                        @(item.ShortDescription.Length > 50 ? item.ShortDescription.Substring(0, 50) + "..." : item.ShortDescription)
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.Category.Name</span>
                                            </td>
                                            <td>
                                                <div>
                                                    @if (item.SalePrice.HasValue && item.SalePrice.Value < item.Price)
                                                    {
                                                        <span class="text-danger fw-bold">@item.SalePrice.Value.ToString("N0") đ</span><br>
                                                        <small class="text-muted text-decoration-line-through">@item.Price.ToString("N0") đ</small>
                                                    }
                                                    else
                                                    {
                                                        <span class="fw-bold">@item.Price.ToString("N0") đ</span>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                @if (item.Stock > 0)
                                                {
                                                    <span class="badge bg-success">@item.Stock</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Hết hàng</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.ProductTags.Any())
                                                {
                                                    @foreach (var pt in item.ProductTags.Take(2))
                                                    {
                                                        <span class="badge bg-secondary me-1">@pt.Tag.Name</span>
                                                    }
                                                    @if (item.ProductTags.Count > 2)
                                                    {
                                                        <small class="text-muted">+@(item.ProductTags.Count - 2)</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Không có</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Tạm dừng</span>
                                                }
                                            </td>
                                            <td>
                                                @item.CreatedAt.ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (ViewBag.TotalPages > 1)
                        {
                            <nav aria-label="Product pagination">
                                <ul class="pagination justify-content-center">
                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.CurrentSearch&categoryId=@ViewBag.CurrentCategoryId">
                                                <i class="fas fa-chevron-left"></i> Trước
                                            </a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="?page=@i&search=@ViewBag.CurrentSearch&categoryId=@ViewBag.CurrentCategoryId">@i</a>
                                        </li>
                                    }

                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.CurrentSearch&categoryId=@ViewBag.CurrentCategoryId">
                                                Sau <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Không tìm thấy sản phẩm nào</h5>
                            @if (!string.IsNullOrEmpty(ViewBag.CurrentSearch) || ViewBag.CurrentCategoryId != null)
                            {
                                <p class="text-muted">Thử thay đổi từ khóa tìm kiếm hoặc bộ lọc</p>
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-times"></i> Xóa bộ lọc
                                </a>
                            }
                            else
                            {
                                <p class="text-muted">Hãy thêm sản phẩm đầu tiên để bắt đầu bán hàng</p>
                            }
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Thêm sản phẩm mới
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
