<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - HWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/HWeb.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HWeb</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="productManagementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-boxes"></i> Sản phẩm
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Categories" asp-action="Index">
                                        <i class="fas fa-tags"></i> Quản lý danh mục
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Tags" asp-action="Index">
                                        <i class="fas fa-tag"></i> Quản lý thẻ
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Products" asp-action="Index">
                                        <i class="fas fa-cube"></i> Quản lý sản phẩm
                                    </a>
                                </li>
                            </ul>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="customerManagementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-users"></i> Khách hàng
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-user-friends"></i> Danh sách khách hàng
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-user-plus"></i> Thêm khách hàng mới
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-crown"></i> Khách hàng VIP
                                    </a>
                                </li>
                            </ul>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="orderManagementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-shopping-cart"></i> Đơn hàng
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-list"></i> Tất cả đơn hàng
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-clock"></i> Đơn hàng chờ xử lý
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-truck"></i> Đơn hàng đang giao
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-check-circle"></i> Đơn hàng hoàn thành
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-ban"></i> Đơn hàng đã hủy
                                    </a>
                                </li>
                            </ul>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-chart-line"></i> Báo cáo
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-chart-bar"></i> Doanh thu theo ngày
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-chart-pie"></i> Sản phẩm bán chạy
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-chart-area"></i> Thống kê khách hàng
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-warehouse"></i> Báo cáo tồn kho
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="systemDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cogs"></i> Hệ thống
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-users-cog"></i> Quản lý Admin
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-sliders-h"></i> Cấu hình website
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-envelope"></i> Cấu hình email
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-database"></i> Sao lưu dữ liệu
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Menu for regular users (customers) -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#" onclick="alert('Chức năng đang phát triển')">
                                <i class="fas fa-shopping-bag"></i> Sản phẩm
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#" onclick="alert('Chức năng đang phát triển')">
                                <i class="fas fa-fire"></i> Khuyến mãi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#" onclick="alert('Chức năng đang phát triển')">
                                <i class="fas fa-phone"></i> Liên hệ
                            </a>
                        </li>
                    }
                </ul>
                
                <!-- User Menu (Right side) -->
                <ul class="navbar-nav">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="#" onclick="alert('Chức năng đang phát triển')">
                                        <i class="fas fa-user-edit"></i> Thông tin cá nhân
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - HWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>