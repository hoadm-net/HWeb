@model List<HWeb.Models.Order>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-action="Profile">Thông tin cá nhân</a></li>
            <li class="breadcrumb-item active" aria-current="page">Đơn hàng của tôi</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-shopping-bag me-2"></i>
                    Đơn hàng của tôi
                </h2>
                <a asp-action="Profile" class="btn btn-outline-primary">
                    <i class="fas fa-user me-2"></i>
                    Thông tin cá nhân
                </a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-shopping-bag text-muted" style="font-size: 5rem;"></i>
                    <h4 class="mt-4 mb-3">Bạn chưa có đơn hàng nào</h4>
                    <p class="text-muted mb-4">Hãy khám phá các sản phẩm tuyệt vời và đặt hàng ngay!</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-shopping-cart me-2"></i>
                        Bắt đầu mua sắm
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                @foreach (var order in Model)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h6 class="mb-0">
                                        <strong>Đơn hàng #@order.OrderNumber</strong>
                                    </h6>
                                    <small class="text-muted">Đặt hàng: @order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                                <div class="col-md-6 text-md-end">
                                    @switch (order.Status)
                                    {
                                        case OrderStatus.Pending:
                                            <span class="badge bg-warning">Chờ xác nhận</span>
                                            break;
                                        case OrderStatus.Confirmed:
                                            <span class="badge bg-info">Đã xác nhận</span>
                                            break;
                                        case OrderStatus.Shipping:
                                            <span class="badge bg-primary">Đang giao hàng</span>
                                            break;
                                        case OrderStatus.Delivered:
                                            <span class="badge bg-success">Đã giao hàng</span>
                                            break;
                                        case OrderStatus.Cancelled:
                                            <span class="badge bg-danger">Đã hủy</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@order.Status</span>
                                            break;
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Người nhận:</strong></div>
                                        <div class="col-sm-8">@order.FullName</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Địa chỉ:</strong></div>
                                        <div class="col-sm-8">@order.ShippingAddress, @order.District, @order.City</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Phương thức thanh toán:</strong></div>
                                        <div class="col-sm-8">
                                            @if (order.PaymentMethod == PaymentMethod.COD)
                                            {
                                                <span class="text-warning">Thanh toán khi nhận hàng (COD)</span>
                                            }
                                            else
                                            {
                                                <span class="text-primary">PayPal</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Trạng thái thanh toán:</strong></div>
                                        <div class="col-sm-8">
                                            @switch (order.PaymentStatus)
                                            {
                                                case PaymentStatus.Pending:
                                                    <span class="badge bg-warning">Chưa thanh toán</span>
                                                    break;
                                                case PaymentStatus.Paid:
                                                    <span class="badge bg-success">Đã thanh toán</span>
                                                    break;
                                                case PaymentStatus.Failed:
                                                    <span class="badge bg-danger">Thất bại</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@order.PaymentStatus</span>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <h5 class="text-primary mb-3">@order.TotalAmount.ToString("N0") đ</h5>
                                    <div class="d-grid gap-2">
                                        <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>
                                            Xem chi tiết
                                        </a>
                                        @if (order.Status == OrderStatus.Pending)
                                        {
                                            <button type="button" class="btn btn-outline-danger btn-sm" 
                                                    onclick="cancelOrder(@order.Id, '@order.OrderNumber')">
                                                <i class="fas fa-times me-1"></i>
                                                Hủy đơn hàng
                                            </button>
                                        }
                                        @if (order.PaymentMethod == PaymentMethod.COD && order.Status == OrderStatus.Delivered)
                                        {
                                            <button type="button" class="btn btn-outline-success btn-sm" disabled>
                                                <i class="fas fa-check me-1"></i>
                                                Đã hoàn thành
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @if (ViewBag.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Orders" asp-route-page="@(ViewBag.CurrentPage - 1)">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }

                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Orders" asp-route-page="@i">@i</a>
                                </li>
                            }

                            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Orders" asp-route-page="@(ViewBag.CurrentPage + 1)">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function cancelOrder(orderId, orderNumber) {
            if (confirm(`Bạn có chắc chắn muốn hủy đơn hàng #${orderNumber}?`)) {
                $.ajax({
                    url: '@Url.Action("CancelOrder", "Account")',
                    type: 'POST',
                    data: { 
                        orderId: orderId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            showToast('success', response.message);
                            location.reload();
                        } else {
                            showToast('error', response.message);
                        }
                    },
                    error: function() {
                        showToast('error', 'Có lỗi xảy ra. Vui lòng thử lại.');
                    }
                });
            }
        }

        function showToast(type, message) {
            const toastClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const toast = $(`<div class="alert ${toastClass} alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 9999;">
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>`);
            
            $('body').append(toast);
            
            setTimeout(function() {
                toast.alert('close');
            }, 3000);
        }
    </script>
}
