<!-- Content Row -->
<div class="row">
    <!-- Recent Products -->
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-boxes me-2"></i>Sản phẩm mới nhất
                </h6>
                <a asp-controller="Products" asp-action="Index" class="btn btn-sm btn-primary">
                    Xem tất cả
                </a>
            </div>
            <div class="card-body">
                @if (ViewBag.RecentProducts != null)
                {
                    @foreach (var product in ViewBag.RecentProducts)
                    {
                        <div class="d-flex align-items-center mb-3 p-2 border rounded">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.Name" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-image text-muted"></i>
                                </div>
                            }
                            <div class="flex-grow-1">
                                <h6 class="mb-1">@product.Name</h6>
                                <small class="text-muted">@product.Category?.Name</small>
                                <div class="text-primary">
                                    <strong>@product.Price.ToString("N0")đ</strong>
                                </div>
                            </div>
                            <div>
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center">Chưa có sản phẩm nào.</p>
                }
            </div>
        </div>
    </div>

    <!-- Pending Reviews -->
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-danger">
                    <i class="fas fa-clock me-2"></i>Đánh giá cần duyệt
                </h6>
                <a asp-controller="Reviews" asp-action="Index" asp-route-status="pending" class="btn btn-sm btn-danger">
                    Xem tất cả
                </a>
            </div>
            <div class="card-body">
                @if (ViewBag.PendingReviews != null)
                {
                    @foreach (var review in ViewBag.PendingReviews)
                    {
                        <div class="border-start border-4 border-warning p-3 mb-3 bg-light">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h6 class="mb-1">@review.Title</h6>
                                    <small class="text-muted">@review.Product.Name</small>
                                </div>
                                <div class="rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= review.Rating ? "text-warning" : "text-muted") fa-sm"></i>
                                    }
                                </div>
                            </div>
                            <p class="text-muted mb-2 small">
                                @(review.Comment.Length > 80 ? review.Comment.Substring(0, 80) + "..." : review.Comment)
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>@review.CustomerName
                                    <span class="ms-2">@review.CreatedAt.ToString("dd/MM HH:mm")</span>
                                </small>
                                <div>
                                    <a asp-controller="Reviews" asp-action="Details" asp-route-id="@review.Id" class="btn btn-sm btn-outline-info me-1">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button class="btn btn-sm btn-success" onclick="quickApprove(@review.Id)">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                        <p class="text-muted">Tất cả đánh giá đã được duyệt!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Pending Orders Row -->
<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-warning">
                    <i class="fas fa-shopping-cart me-2"></i>Đơn hàng cần xử lý
                </h6>
                <a asp-controller="Orders" asp-action="Index" asp-route-status="Pending" class="btn btn-sm btn-warning">
                    Xem tất cả
                </a>
            </div>
            <div class="card-body">
                @if (ViewBag.PendingOrders != null)
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã đơn hàng</th>
                                    <th>Khách hàng</th>
                                    <th>Tổng tiền</th>
                                    <th>Thời gian</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in ViewBag.PendingOrders)
                                {
                                    <tr>
                                        <td>
                                            <strong>#@order.Id.ToString("D6")</strong>
                                            <br>
                                            <small class="text-muted">@order.TotalItems sản phẩm</small>
                                        </td>
                                        <td>
                                            <strong>@order.CustomerName</strong>
                                            <br>
                                            <small class="text-muted">@order.CustomerPhone</small>
                                        </td>
                                        <td>
                                            <strong class="text-primary">@order.TotalAmount.ToString("N0")đ</strong>
                                        </td>
                                        <td>
                                            @order.CreatedAt.ToString("dd/MM HH:mm")
                                            <br>
                                            <small class="text-muted">
                                                @{
                                                    var timeSpan = DateTime.Now - order.CreatedAt;
                                                    if (timeSpan.TotalHours < 1)
                                                    {
                                                        @($"{(int)timeSpan.TotalMinutes} phút trước")
                                                    }
                                                    else if (timeSpan.TotalDays < 1)
                                                    {
                                                        @($"{(int)timeSpan.TotalHours} giờ trước")
                                                    }
                                                    else
                                                    {
                                                        @($"{(int)timeSpan.TotalDays} ngày trước")
                                                    }
                                                }
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" 
                                                   class="btn btn-outline-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <button class="btn btn-outline-success" 
                                                        onclick="quickConfirmOrder(@order.Id)">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                        <p class="text-muted">Tất cả đơn hàng đã được xử lý!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function quickApprove(reviewId) {
            if (confirm('Duyệt đánh giá này?')) {
                $.ajax({
                    url: '@Url.Action("Approve", "Reviews")',
                    type: 'POST',
                    data: { id: reviewId },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra. Vui lòng thử lại.');
                    }
                });
            }
        }

        function quickConfirmOrder(orderId) {
            if (confirm('Xác nhận đơn hàng này?')) {
                $.ajax({
                    url: '@Url.Action("UpdateStatus", "Orders")',
                    type: 'POST',
                    data: { 
                        id: orderId, 
                        newStatus: 2 // Confirmed
                    },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra. Vui lòng thử lại.');
                    }
                });
            }
        }
    </script>
}
