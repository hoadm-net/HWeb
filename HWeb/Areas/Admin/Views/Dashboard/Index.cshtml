        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="h4 mb-0 text-white">@ViewBag.TodayOrders</div>
                        <div class="text-white">Đơn hôm nay</div>
                    </div>
                    <div class="opacity-75">
                        <i class="fas fa-calendar-day fa-2x text-white"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between bg-dark">
                <a class="small text-white stretched-link text-decoration-none" asp-controller="Orders" asp-action="Index">
