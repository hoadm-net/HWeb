@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-success">
            <h4><i class="fas fa-check-circle"></i> Chào mừng Admin!</h4>
            <p>Bạn đã đăng nhập thành công vào hệ thống quản trị.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Thông tin Admin</h5>
            </div>
            <div class="card-body">
                <p><strong>Tên đăng nhập:</strong> @User.Identity!.Name</p>
                <p><strong>Thời gian đăng nhập:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Vai trò:</strong> Admin</p>
                
                <hr />
                
                <div class="mt-3">
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                        </button>
                    </form>
                    
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fas fa-home"></i> Về trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-header">
                <i class="fas fa-boxes"></i> Quản lý sản phẩm
            </div>
            <div class="card-body">
                <p class="card-text">Thêm, sửa, xóa sản phẩm</p>
                <a asp-area="" asp-controller="Products" asp-action="Index" class="btn btn-light">
                    Xem tất cả
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-header">
                <i class="fas fa-list"></i> Quản lý danh mục
            </div>
            <div class="card-body">
                <p class="card-text">Thêm, sửa, xóa danh mục</p>
                <a asp-area="" asp-controller="Categories" asp-action="Index" class="btn btn-light">
                    Xem tất cả
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-header">
                <i class="fas fa-tags"></i> Quản lý thẻ
            </div>
            <div class="card-body">
                <p class="card-text">Thêm, sửa, xóa thẻ</p>
                <a asp-area="Admin" asp-controller="Tags" asp-action="Index" class="btn btn-light">
                    Xem tất cả
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-header">
                <i class="fas fa-users"></i> Quản lý người dùng
            </div>
            <div class="card-body">
                <p class="card-text">Quản lý tài khoản</p>
                <a href="#" class="btn btn-light">
                    Xem tất cả
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .fas {
        margin-right: 5px;
    }
</style>
