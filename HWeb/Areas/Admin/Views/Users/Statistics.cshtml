@{
    ViewData["Title"] = "Thống kê người dùng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-chart-bar text-success me-2"></i>
        Thống kê người dùng
    </h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Quay lại
    </a>
</div>

<!-- Statistics Overview -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="h4 mb-0">@ViewBag.TotalUsers</div>
                        <div>Tổng người dùng</div>
                    </div>
                    <div class="opacity-75">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-action="Index">
                    Xem danh sách
                </a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="h4 mb-0">@ViewBag.NewUsersThisMonth</div>
                        <div>Đăng ký tháng này</div>
                    </div>
                    <div class="opacity-75">
                        <i class="fas fa-user-plus fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <span class="small text-white">Tháng @DateTime.Now.ToString("MM/yyyy")</span>
                <div class="small text-white"><i class="fas fa-calendar"></i></div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="h4 mb-0">@ViewBag.NewUsersToday</div>
                        <div>Đăng ký hôm nay</div>
                    </div>
                    <div class="opacity-75">
                        <i class="fas fa-calendar-day fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <span class="small text-white">@DateTime.Today.ToString("dd/MM/yyyy")</span>
                <div class="small text-white"><i class="fas fa-clock"></i></div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-warning text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="h4 mb-0">@ViewBag.LockedUsers</div>
                        <div>Tài khoản bị khóa</div>
                    </div>
                    <div class="opacity-75">
                        <i class="fas fa-user-lock fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-action="Index" asp-route-status="locked">
                    Xem chi tiết
                </a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Role Distribution -->
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-user-tag me-2"></i>
                    Phân bố quyền hạn (Roles)
                </h5>
            </div>
            <div class="card-body">
                <canvas id="roleChart" width="400" height="200"></canvas>
                
                <div class="mt-3">
                    @if (ViewBag.RoleStats is Dictionary<string, int> roleStats)
                    {
                        @foreach (var role in roleStats)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2 p-2 border rounded">
                                <div>
                                    <span class="badge bg-@(role.Key == "Admin" ? "danger" : "primary") me-2">@role.Key</span>
                                    <span>@role.Value người dùng</span>
                                </div>
                                <div>
                                    @{
                                        var percentage = ViewBag.TotalUsers > 0 ? (double)role.Value / ViewBag.TotalUsers * 100 : 0;
                                    }
                                    <small class="text-muted">@percentage.ToString("F1")%</small>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Registrations -->
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-user-clock me-2"></i>
                    Đăng ký gần đây
                </h5>
                <a asp-action="Index" class="btn btn-sm btn-outline-primary">
                    Xem tất cả
                </a>
            </div>
            <div class="card-body">
                @if (ViewBag.RecentUsers is List<ApplicationUser> recentUsers && recentUsers.Any())
                {
                    @foreach (var user in recentUsers)
                    {
                        <div class="d-flex align-items-center mb-3 p-2 border rounded">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                 style="width: 40px; height: 40px;">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="text-decoration-none">
                                        @($"{user.FirstName} {user.LastName}".Trim())
                                    </a>
                                </h6>
                                <small class="text-muted">@user.Email</small>
                                <div class="small text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    @user.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                            <div>
                                @if (user.EmailConfirmed)
                                {
                                    <span class="badge bg-success">Đã xác thực</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Chưa xác thực</span>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-user-plus text-muted fa-3x mb-3"></i>
                        <p class="text-muted">Chưa có đăng ký mới.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Monthly Registration Chart -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i>
                    Xu hướng đăng ký theo tháng
                </h5>
            </div>
            <div class="card-body">
                <canvas id="monthlyChart" width="400" height="100"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Role Distribution Chart
        const roleCtx = document.getElementById('roleChart').getContext('2d');
        const roleData = @Html.Raw(Json.Serialize(ViewBag.RoleStats));
        
        new Chart(roleCtx, {
            type: 'doughnut',
            data: {
                labels: Object.keys(roleData),
                datasets: [{
                    data: Object.values(roleData),
                    backgroundColor: ['#dc3545', '#007bff', '#28a745', '#ffc107', '#17a2b8'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                    }
                }
            }
        });

        // Monthly Registration Chart (Mock data - you can implement real data from controller)
        const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
        
        // Generate last 6 months labels
        const months = [];
        const currentDate = new Date();
        for (let i = 5; i >= 0; i--) {
            const date = new Date(currentDate.getFullYear(), currentDate.getMonth() - i, 1);
            months.push(date.toLocaleDateString('vi-VN', { month: 'short', year: 'numeric' }));
        }
        
        // Mock data - replace with real data from controller
        const monthlyData = [12, 19, 15, 25, 22, @ViewBag.NewUsersThisMonth];
        
        new Chart(monthlyCtx, {
            type: 'line',
            data: {
                labels: months,
                datasets: [{
                    label: 'Số lượng đăng ký',
                    data: monthlyData,
                    borderColor: '#007bff',
                    backgroundColor: 'rgba(0, 123, 255, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
    
    <style>
        #roleChart {
            height: 200px !important;
        }
        
        #monthlyChart {
            height: 300px !important;
        }
    </style>
}
