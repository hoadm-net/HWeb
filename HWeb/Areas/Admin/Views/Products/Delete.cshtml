@model HWeb.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-danger">@ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="alert alert-warning" role="alert">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa sản phẩm này không? Hành động này không thể hoàn tác.
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">Thông tin sản phẩm sẽ bị xóa</h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="text-center mb-4">
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 200px;">
                    </div>
                }

                <h4>@Model.Name</h4>

                @if (!string.IsNullOrEmpty(Model.ShortDescription))
                {
                    <p class="text-muted">@Model.ShortDescription</p>
                }

                @if (Model.ProductTags.Any())
                {
                    <div class="mb-3">
                        <strong>Thẻ (Tags):</strong>
                        @foreach (var productTag in Model.ProductTags)
                        {
                            <span class="badge bg-secondary me-1">@productTag.Tag.Name</span>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Chi tiết</h5>
            </div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">ID:</div>
                    <div class="col-sm-7">@Model.Id</div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Danh mục:</div>
                    <div class="col-sm-7">
                        @if (Model.Category != null)
                        {
                            @Model.Category.Name
                        }
                        else
                        {
                            <span class="text-muted">Chưa phân loại</span>
                        }
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Giá:</div>
                    <div class="col-sm-7">@Model.Price.ToString("C")</div>
                </div>

                @if (Model.SalePrice.HasValue)
                {
                    <div class="row mb-2">
                        <div class="col-sm-5 fw-bold">Giá KM:</div>
                        <div class="col-sm-7">@Model.SalePrice.Value.ToString("C")</div>
                    </div>
                }

                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Tồn kho:</div>
                    <div class="col-sm-7">
                        <span class="badge @(Model.Stock > 0 ? "bg-success" : "bg-danger")">
                            @Model.Stock
                        </span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Trạng thái:</div>
                    <div class="col-sm-7">
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                            @(Model.IsActive ? "Hoạt động" : "Không hoạt động")
                        </span>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-5 fw-bold">Ngày tạo:</div>
                    <div class="col-sm-7">
                        <small>@Model.CreatedAt.ToString("dd/MM/yyyy")</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <form asp-action="Delete" method="post" class="d-grid gap-2">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                    <i class="fas fa-eye"></i> Xem chi tiết
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy bỏ
                </a>
            </form>
        </div>
    </div>
</div>
