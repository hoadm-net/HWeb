@model HWeb.Models.Order
@{
    ViewData["Title"] = "In hóa đơn";
    Layout = null; // Remove layout for printing
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hóa đơn #@Model.Id.ToString("D6")</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <style>
        @@media print {
            .no-print { display: none !important; }
            .page-break { page-break-after: always; }
        }
        
        .invoice-header {
            border-bottom: 3px solid #007bff;
            margin-bottom: 30px;
            padding-bottom: 20px;
        }
        
        .company-info h2 {
            color: #007bff;
            margin-bottom: 5px;
        }
        
        .invoice-details {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }
        
        .table th {
            background-color: #007bff;
            color: white;
        }
        
        .total-section {
            background-color: #007bff;
            color: white;
            padding: 15px;
            border-radius: 8px;
        }
        
        .status-badge {
            font-size: 1.1em;
            padding: 8px 15px;
        }
        
        .col-stt { width: 50px; }
        .col-price { width: 120px; }
        .col-qty { width: 80px; }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Print Button -->
        <div class="no-print mb-3">
            <button onclick="window.print()" class="btn btn-primary">
                <i class="fas fa-print me-2"></i>In hóa đơn
            </button>
            <button onclick="window.close()" class="btn btn-secondary ms-2">
                <i class="fas fa-times me-2"></i>Đóng
            </button>
        </div>

        <!-- Invoice Header -->
        <div class="invoice-header">
            <div class="row">
                <div class="col-md-6">
                    <div class="company-info">
                        <h2>HWeb Store</h2>
                        <p class="mb-1"><i class="fas fa-map-marker-alt me-2"></i>123 Đường ABC, Quận XYZ, TP.HCM</p>
                        <p class="mb-1"><i class="fas fa-phone me-2"></i>0901 234 567</p>
                        <p class="mb-1"><i class="fas fa-envelope me-2"></i>info@hwebstore.com</p>
                        <p class="mb-0"><i class="fas fa-globe me-2"></i>www.hwebstore.com</p>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <h2 class="text-primary">HÓA ĐƠN BÁN HÀNG</h2>
                    <h4>Số: #@Model.Id.ToString("D6")</h4>
                    <p class="mb-1">Ngày: @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                    <div class="mt-3">
                        @switch (Model.Status)
                        {
                            case OrderStatus.Pending:
                                <span class="badge bg-warning status-badge">@Model.StatusDisplayName</span>
                                break;
                            case OrderStatus.Confirmed:
                                <span class="badge bg-info status-badge">@Model.StatusDisplayName</span>
                                break;
                            case OrderStatus.Shipping:
                                <span class="badge bg-primary status-badge">@Model.StatusDisplayName</span>
                                break;
                            case OrderStatus.Delivered:
                                <span class="badge bg-success status-badge">@Model.StatusDisplayName</span>
                                break;
                            case OrderStatus.Cancelled:
                                <span class="badge bg-danger status-badge">@Model.StatusDisplayName</span>
                                break;
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer & Order Info -->
        <div class="invoice-details">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Thông tin khách hàng</h5>
                    <p class="mb-1"><strong>Họ tên:</strong> @Model.CustomerName</p>
                    <p class="mb-1"><strong>Email:</strong> @Model.CustomerEmail</p>
                    <p class="mb-1"><strong>Điện thoại:</strong> @Model.CustomerPhone</p>
                    <p class="mb-0"><strong>Địa chỉ giao hàng:</strong><br>@Model.ShippingAddress</p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Thông tin đơn hàng</h5>
                    <p class="mb-1"><strong>Mã đơn hàng:</strong> #@Model.Id.ToString("D6")</p>
                    <p class="mb-1"><strong>Ngày đặt hàng:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    <p class="mb-1"><strong>Phương thức thanh toán:</strong> @Model.PaymentMethodDisplayName</p>
                    <p class="mb-1"><strong>Tình trạng thanh toán:</strong> 
                        @if (Model.IsPaid)
                        {
                            <span class="badge bg-success">Đã thanh toán</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Chưa thanh toán</span>
                        }
                    </p>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <p class="mb-0"><strong>Ghi chú:</strong> @Model.Notes</p>
                    }
                </div>
            </div>
        </div>

        <!-- Order Items -->
        <div class="mb-4">
            <h5 class="text-primary mb-3">Chi tiết đơn hàng</h5>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="col-stt">STT</th>
                            <th>Tên sản phẩm</th>
                            <th class="col-price">Đơn giá</th>
                            <th class="col-qty">Số lượng</th>
                            <th class="col-price">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int index = 1; }
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td class="text-center">@index</td>
                                <td>
                                    <strong>@item.ProductName</strong>
                                    @if (item.Product?.Category != null)
                                    {
                                        <br><small class="text-muted">Danh mục: @item.Product.Category.Name</small>
                                    }
                                </td>
                                <td class="text-end">@item.UnitPrice.ToString("N0")đ</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end"><strong>@item.TotalPrice.ToString("N0")đ</strong></td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Total Section -->
        <div class="row justify-content-end">
            <div class="col-md-4">
                <div class="total-section">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <span>@Model.Subtotal.ToString("N0")đ</span>
                    </div>
                    @if (Model.ShippingFee > 0)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>Phí vận chuyển:</span>
                            <span>@Model.ShippingFee.ToString("N0")đ</span>
                        </div>
                    }
                    <hr class="my-2" style="border-color: rgba(255,255,255,0.3);">
                    <div class="d-flex justify-content-between">
                        <strong>Tổng cộng:</strong>
                        <strong style="font-size: 1.2em;">@Model.TotalAmount.ToString("N0")đ</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="mt-5 pt-4" style="border-top: 1px solid #dee2e6;">
            <div class="row">
                <div class="col-md-6">
                    <h6>Điều khoản & Lưu ý:</h6>
                    <ul class="small text-muted">
                        <li>Hóa đơn này là bằng chứng mua hàng, quý khách vui lòng giữ lại.</li>
                        <li>Sản phẩm được bảo hành theo chính sách của từng nhà sản xuất.</li>
                        <li>Đổi trả trong vòng 7 ngày với điều kiện sản phẩm còn nguyên vẹn.</li>
                    </ul>
                </div>
                <div class="col-md-6 text-end">
                    <p class="mb-1"><strong>Hotline hỗ trợ: 1900 1234</strong></p>
                    <p class="mb-0 small text-muted">Cảm ơn quý khách đã mua hàng tại HWeb Store!</p>
                </div>
            </div>
        </div>

        <!-- Print timestamp -->
        <div class="text-center mt-4 small text-muted no-print">
            In lúc: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
        </div>
    </div>

    <script>
        // Auto print when page loads (optional)
        // window.onload = function() { window.print(); }
    </script>
</body>
</html>
