@model HWeb.Models.OrderStatisticsViewModel
@{
    ViewData["Title"] = "Thống kê đơn hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-chart-line text-success me-2"></i>
        Thống kê đơn hàng
    </h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Quay lại
    </a>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-2 col-md-4 col-6 mb-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body text-center">
                <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                <h4 class="mb-0">@Model.TotalOrders</h4>
                <small>Tổng đơn hàng</small>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 col-6 mb-3">
        <div class="card bg-warning text-white h-100">
            <div class="card-body text-center">
                <i class="fas fa-clock fa-2x mb-2"></i>
                <h4 class="mb-0">@Model.PendingOrders</h4>
                <small>Chờ xác nhận</small>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 col-6 mb-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body text-center">
                <i class="fas fa-check fa-2x mb-2"></i>
                <h4 class="mb-0">@Model.ConfirmedOrders</h4>
                <small>Đã xác nhận</small>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 col-6 mb-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body text-center">
                <i class="fas fa-shipping-fast fa-2x mb-2"></i>
                <h4 class="mb-0">@Model.ShippingOrders</h4>
                <small>Đang giao</small>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 col-6 mb-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body text-center">
                <i class="fas fa-check-circle fa-2x mb-2"></i>
                <h4 class="mb-0">@Model.DeliveredOrders</h4>
                <small>Đã giao</small>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 col-6 mb-3">
        <div class="card bg-danger text-white h-100">
            <div class="card-body text-center">
                <i class="fas fa-times-circle fa-2x mb-2"></i>
                <h4 class="mb-0">@Model.CancelledOrders</h4>
                <small>Đã hủy</small>
            </div>
        </div>
    </div>
</div>

<!-- Revenue & Performance Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-gradient text-white h-100" style="background: linear-gradient(45deg, #28a745, #20c997);">
            <div class="card-body text-center">
                <i class="fas fa-dollar-sign fa-2x mb-2"></i>
                <h4 class="mb-0">@Model.TotalRevenue.ToString("N0")đ</h4>
                <small>Tổng doanh thu</small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-gradient text-white h-100" style="background: linear-gradient(45deg, #17a2b8, #6f42c1);">
            <div class="card-body text-center">
                <i class="fas fa-chart-bar fa-2x mb-2"></i>
                <h4 class="mb-0">@Model.AverageOrderValue.ToString("N0")đ</h4>
                <small>Giá trị TB/đơn</small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-gradient text-white h-100" style="background: linear-gradient(45deg, #fd7e14, #e83e8c);">
            <div class="card-body text-center">
                <i class="fas fa-calendar-day fa-2x mb-2"></i>
                <h4 class="mb-0">@Model.OrdersToday</h4>
                <small>Đơn hôm nay</small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-gradient text-white h-100" style="background: linear-gradient(45deg, #6610f2, #6f42c1);">
            <div class="card-body text-center">
                <i class="fas fa-calendar-alt fa-2x mb-2"></i>
                <h4 class="mb-0">@Model.OrdersThisMonth</h4>
                <small>Đơn tháng này</small>
            </div>
        </div>
    </div>
</div>

<!-- Charts & Analytics Row -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Phân bố trạng thái đơn hàng</h5>
            </div>
            <div class="card-body">
                <canvas id="orderStatusChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Tỷ lệ hoàn thành đơn hàng</h5>
            </div>
            <div class="card-body d-flex align-items-center justify-content-center">
                <div class="text-center">
                    <div class="progress-circle mb-3">
                        @{
                            var completionRate = Model.TotalOrders > 0 ? (double)Model.DeliveredOrders / Model.TotalOrders * 100 : 0;
                        }
                        <div class="progress-circle-text">
                            <span class="h2 text-success">@completionRate.ToString("F1")%</span>
                            <br>
                            <small class="text-muted">Tỷ lệ hoàn thành</small>
                        </div>
                    </div>
                    <p class="text-muted mb-0">
                        @Model.DeliveredOrders/@Model.TotalOrders đơn hàng đã giao thành công
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Top Selling Products -->
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-trophy text-warning me-2"></i>
                    Top 10 sản phẩm bán chạy
                </h5>
            </div>
            <div class="card-body">
                @if (Model.TopProducts != null && Model.TopProducts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Hạng</th>
                                    <th>Sản phẩm</th>
                                    <th>Đã bán</th>
                                    <th>Doanh thu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int rank = 1; }
                                @foreach (var item in Model.TopProducts)
                                {
                                    <tr>
                                        <td>
                                            @if (rank <= 3)
                                            {
                                                <span class="badge bg-warning text-dark">#@rank</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">#@rank</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (item.Product != null && !string.IsNullOrEmpty(item.Product.ImageUrl))
                                                {
                                                    <img src="@item.Product.ImageUrl" alt="@item.ProductName" 
                                                         class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                }
                                                <div>
                                                    <strong>@item.ProductName</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@item.TotalQuantity sản phẩm</span>
                                        </td>
                                        <td>
                                            <strong class="text-success">@item.TotalRevenue.ToString("N0")đ</strong>
                                        </td>
                                    </tr>
                                    { rank++; }
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-chart-bar text-muted fa-3x mb-3"></i>
                        <p class="text-muted">Chưa có dữ liệu bán hàng.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-clock me-2"></i>
                    Đơn hàng gần đây
                </h5>
            </div>
            <div class="card-body">
                @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                {
                    @foreach (var order in Model.RecentOrders)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3 p-2 border rounded">
                            <div>
                                <strong>#@order.Id.ToString("D6")</strong>
                                <br>
                                <small class="text-muted">@order.CustomerName</small>
                                <br>
                                <small class="text-muted">@order.CreatedAt.ToString("dd/MM HH:mm")</small>
                            </div>
                            <div class="text-end">
                                <div class="text-primary mb-1">
                                    <strong>@order.TotalAmount.ToString("N0")đ</strong>
                                </div>
                                @switch (order.Status)
                                {
                                    case OrderStatus.Pending:
                                        <span class="badge bg-warning">@order.StatusDisplayName</span>
                                        break;
                                    case OrderStatus.Confirmed:
                                        <span class="badge bg-info">@order.StatusDisplayName</span>
                                        break;
                                    case OrderStatus.Shipping:
                                        <span class="badge bg-primary">@order.StatusDisplayName</span>
                                        break;
                                    case OrderStatus.Delivered:
                                        <span class="badge bg-success">@order.StatusDisplayName</span>
                                        break;
                                    case OrderStatus.Cancelled:
                                        <span class="badge bg-danger">@order.StatusDisplayName</span>
                                        break;
                                }
                            </div>
                        </div>
                    }
                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-outline-primary btn-sm">
                            Xem tất cả đơn hàng
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-shopping-cart text-muted fa-3x mb-3"></i>
                        <p class="text-muted">Chưa có đơn hàng nào.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Order Status Chart
        const orderStatusCtx = document.getElementById('orderStatusChart').getContext('2d');
        new Chart(orderStatusCtx, {
            type: 'doughnut',
            data: {
                labels: ['Chờ xác nhận', 'Đã xác nhận', 'Đang giao', 'Đã giao', 'Đã hủy'],
                datasets: [{
                    data: [@Model.PendingOrders, @Model.ConfirmedOrders, @Model.ShippingOrders, @Model.DeliveredOrders, @Model.CancelledOrders],
                    backgroundColor: ['#ffc107', '#17a2b8', '#007bff', '#28a745', '#dc3545'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                    }
                }
            }
        });
    </script>
    
    <style>
        .progress-circle {
            width: 120px;
            height: 120px;
            border: 8px solid #28a745;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }
        
        .progress-circle-text {
            text-align: center;
        }
        
        #orderStatusChart {
            height: 200px !important;
        }
        
        .bg-gradient {
            background-image: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, transparent 100%);
        }
    </style>
}
