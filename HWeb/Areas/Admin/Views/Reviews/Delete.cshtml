@model HWeb.Models.Review
@{
    ViewData["Title"] = "Xóa đánh giá";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-danger">
        <i class="fas fa-trash me-2"></i>
        Xóa đánh giá
    </h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Quay lại
    </a>
</div>

<div class="alert alert-warning">
    <i class="fas fa-exclamation-triangle me-2"></i>
    <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa đánh giá này? Hành động này không thể hoàn tác.
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Thông tin đánh giá sẽ bị xóa</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <table class="table table-borderless">
                    <tr>
                        <td width="150"><strong>Sản phẩm:</strong></td>
                        <td>
                            @Model.Product.Name
                            <br><small class="text-muted">ID: @Model.Product.Id</small>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Khách hàng:</strong></td>
                        <td>
                            @Model.CustomerName
                            @if (Model.User != null)
                            {
                                <br><small class="text-muted">@Model.User.Email</small>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Đánh giá:</strong></td>
                        <td>
                            <div class="rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= Model.Rating ? "text-warning" : "text-muted")"></i>
                                }
                                <span class="ms-2">@Model.Rating/5 sao</span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Tiêu đề:</strong></td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td><strong>Nội dung:</strong></td>
                        <td>
                            <div class="border p-2 bg-light rounded">
                                @Model.Comment
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Ngày tạo:</strong></td>
                        <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                    <tr>
                        <td><strong>Trạng thái:</strong></td>
                        <td>
                            @if (Model.IsApproved)
                            {
                                <span class="badge bg-success">Đã duyệt</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Chờ duyệt</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                {
                    <div class="text-center">
                        <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" 
                             class="img-fluid rounded" style="max-height: 200px;">
                        <p class="mt-2 text-muted">@Model.Product.Name</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center gap-3 mt-4">
    <form asp-action="Delete" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger btn-lg">
            <i class="fas fa-trash me-2"></i>
            Xác nhận xóa
        </button>
    </form>
    
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">
        <i class="fas fa-times me-2"></i>
        Hủy bỏ
    </a>
</div>
